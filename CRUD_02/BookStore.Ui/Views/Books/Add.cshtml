@{ 
    if(Model.Id == 0 )
    {
        ViewBag.titulo = "Adicionar";
        ViewBag.Title = "Add";
    }
    else
    {
        ViewBag.titulo = "Editar";
        ViewBag.Title = "Edit";
    }

   
}

<h3>@ViewBag.titulo book </h3>

<div class="mx-sm-5">
    <form method="post">
        <div class="form-group row mx-sm-5">
            <label for="txtTitulo">Title</label>
            <input class="form-control" type="text" name="titulo" id="txtTitulo" value="@Model.Titulo" />
        </div>

        <div class="form-group row mx-sm-5">
            <label for="txtNome">Name</label>
            <input class="form-control" type="text" name="nome" id="txtNome" value="@Model.Nome" />
        </div>

        <div class="form-group row mx-sm-5">
            <label for="txtSobreNome">Last name</label>
            <input class="form-control" type="text" name="sobreNome" id="txtSobreNome" value="@Model.SobreNome" />
        </div>


        <div class="form-group row mx-sm-5">
            <label for="txtIdioma">Language</label>
            <input class="form-control" type="text" name="idioma" id="txtIdioma" value="@Model.Idioma" />
        </div>

        <!-- FAZENDO UM SELECT PARA MOSTRAR OS PAISES -->
        <div class="form-group row mx-sm-5">
            <label for="txtOrigem">Made</label>
                <select name="OrigemId" class="form-control">
                    <option value="">Select</option>
                    @foreach (BookStore.Ui.Models.Origem origem in ViewBag.Origens)
                    {
                        <option  @(origem.Id == Model.OrigemId ?  "selected" : "") value="@origem.Id" > @origem.Nome </option>
                    }
                </select>
        </div>

        <div class="form-group row mx-sm-5">
            <label for="txtIsbn">ISBN</label>
            <input class="form-control" type="number" name="isbn" id="txtIsbn" value="@Model.Isbn" />
        </div>

        <div class="form-group row mx-sm-5">
            <label for="txtAno">Year</label>
            <input class="form-control" type="number" name="ano" id="txtAno" value="@Model.Ano" />
        </div>

        <br />

        <div class="form-group row justify-content-center">
            <button class="btn btn-primary">Adicionar</button>
        </div>
    </form>
</div>

